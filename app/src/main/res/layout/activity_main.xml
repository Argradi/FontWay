<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disabled"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="616dp"
        android:layout_toStartOf="@+id/maintenance"
        android:background="@drawable/disabled" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/maintenance"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="616dp"
        android:layout_toStartOf="@+id/enabled"
        android:background="@drawable/maintenance" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enabled"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="616dp"
        android:background="@drawable/enabled" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/paw"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="524dp"
        android:background="@drawable/paw" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/people"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/paw"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/people" />
</RelativeLayout>